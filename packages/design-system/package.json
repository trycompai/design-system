{
  "name": "@trycompai/design-system",
  "version": "1.0.1",
  "description": "Design system for Comp AI - shadcn-style components with Tailwind CSS",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./components/*": {
      "types": "./src/components/ui/*.tsx",
      "import": "./src/components/ui/*.tsx",
      "default": "./src/components/ui/*.tsx"
    },
    "./cn": {
      "types": "./lib/utils.ts",
      "import": "./lib/utils.ts",
      "default": "./lib/utils.ts"
    },
    "./globals.css": "./src/styles/globals.css",
    "./fonts/*": "./src/fonts/*",
    "./tailwind.config": {
      "types": "./tailwind.config.ts",
      "import": "./tailwind.config.ts",
      "default": "./tailwind.config.ts"
    },
    "./postcss.config": "./postcss.config.mjs"
  },
  "files": [
    "src",
    "lib",
    "hooks",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "components.json",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trycompai/comp.git",
    "directory": "packages/design-system"
  },
  "license": "MIT",
  "keywords": [
    "design-system",
    "components",
    "react",
    "tailwindcss",
    "shadcn",
    "ui"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/plus-jakarta-sans": "^5.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.13.0",
    "react-resizable-panels": "^4.2.0",
    "recharts": "2.15.4",
    "shadcn": "^3.6.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^22.18.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.9.3"
  }
}
